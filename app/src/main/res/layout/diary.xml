<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context=".DiaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

               <TableLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <TableRow
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                       <ImageView
                           android:id="@+id/backToHome"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_marginStart="16dp"
                           android:layout_marginTop="11dp"
                           android:src="@drawable/back" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="30dp"
                           android:layout_marginTop="10dp"
                           android:text="Food Diary"
                           android:textSize="30sp"/>

                   </TableRow>

               </TableLayout>

            </TableRow>

        </TableLayout>

        <!--Food-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewTarget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:text="Target: "/>

                <TextView
                    android:id="@+id/textViewTargetCalorii"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Target calorii"/>

                <TextView
                    android:id="@+id/textViewSum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Sum: "/>

                <TextView
                    android:id="@+id/textViewSumCalorii"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Sum calorii "/>

            </TableRow>

        </TableLayout>
        <!--//Food-->

        <!--Breakfast-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/moreBreakfast"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/more"/>

                <TextView
                    android:id="@+id/headlineBreakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="20dp"
                    android:text="Breakfast"/>
            </TableRow>

        </TableLayout>
        <!--//Breakfast-->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ListView
                    android:id="@+id/breakfastListView"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"/>
            </TableRow>
        </TableLayout>

        <!--Lunch-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/moreLunch"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/more"/>

                <TextView
                    android:id="@+id/headlineLunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="20dp"
                    android:text="Lunch"/>
            </TableRow>

        </TableLayout>
        <!--//Lunch-->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ListView
                    android:id="@+id/lunchListView"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"/>
            </TableRow>
        </TableLayout>

        <!--Dinner-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/moreDinner"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/more"/>

                <TextView
                    android:id="@+id/headlineDinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="20dp"
                    android:text="Dinner"/>
            </TableRow>

        </TableLayout>
        <!--//Dinner-->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ListView
                    android:id="@+id/dinnerListView"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"/>
            </TableRow>
        </TableLayout>

        <!--Snacks-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/moreSnacks"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/more"/>

                <TextView
                    android:id="@+id/headlineSnacks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="20dp"
                    android:text="Snacks"/>
            </TableRow>

        </TableLayout>
        <!--//Snacks-->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ListView
                    android:id="@+id/snacksListView"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp" />
            </TableRow>
        </TableLayout>




    </LinearLayout>

</ScrollView>